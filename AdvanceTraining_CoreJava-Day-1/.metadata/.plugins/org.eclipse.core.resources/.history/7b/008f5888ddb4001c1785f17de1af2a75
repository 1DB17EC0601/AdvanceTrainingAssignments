package com;

import java.util.Scanner;

public class Rectangle {
	
	double length=1;
	double width=1;
	double area;
	double perimeter;
    
	
	public Rectangle()
	{
		length=0;
		width=0;
		
	}
	
	void input() {
		
		Scanner sc= new Scanner(System.in);
		
		System.out.println("Enter the lenth of a rectangle");
		length=sc.nextDouble();
		System.out.println("Enter the lenth of a rectangle");
		width= sc.nextDouble();		
		}
		
	

     void areaOfRectangle()
     {
        	 area=length*width;
     }
     
     void perimeter()
     {
    	 perimeter = 2*(length*width);
     }
     
     void display()
     {
    	 System.out.println("The area of a reactangle is "+area);
     }
     }
	


